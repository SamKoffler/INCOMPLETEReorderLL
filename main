# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next

class Solution:
    def reorderList(self, head: Optional[ListNode]) -> None:
        if not head.next:
            return head
        
        curr = head

        length = 0

        while curr:
            length+=1
            curr=curr.next

        l1 = ListNode()


        def connectNext(curr, length):
            curr=curr.next
